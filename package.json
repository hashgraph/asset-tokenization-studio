{
  "name": "@hashgraph/hedera-asset-tokenization",
  "version": "1.14.1",
  "license": "Apache-2.0",
  "description": "asset tokenization",
  "private": true,
  "workspaces": [
    "packages/ats/*"
  ],
  "scripts": {
    "setup": "npm install && npm run install:web",
    "start:ats": "npm run clean && npm install && npm run build:contracts && npm run build:sdk && npm run install:web && cd apps/ats/web && yarn dev",
    "install:web": "cd apps/ats/web && yarn install",
    "build:contracts": "npm run build --workspace=packages/ats/contracts",
    "build:sdk": "npm run build --workspace=packages/ats/sdk",
    "build:web": "cd apps/ats/web && yarn build",
    "build:all": "npm run build:contracts && npm run build:sdk && npm run build:web",
    "publish:contracts": "cd packages/ats/contracts && npm publish",
    "publish:sdk": "cd packages/ats/sdk && npm publish",
    "publish:web": "cd apps/ats/web && npm publish",
    "clean": "npm run clean:all:modules && npm run clean:all:build",
    "clean:contracts:modules": "cd packages/ats/contracts && npm run clean:node_modules",
    "clean:sdk:modules": "npx -y rimraf packages/ats/sdk/node_modules",
    "clean:web:modules": "npx -y rimraf apps/ats/web/node_modules apps/ats/web/yarn.lock",
    "clean:all:modules": "rimraf node_modules package-lock.json && npx -y concurrently \"npm run clean:sdk:modules\" \"npm run clean:web:modules\" \"npm run clean:contracts:modules\"",
    "clean:contracts:build": "cd packages/ats/contracts && npm run clean:build",
    "clean:sdk:build": "npx -y rimraf packages/ats/sdk/build sdk/coverage",
    "clean:web:build": "npx -y rimraf apps/ats/web/dist",
    "clean:all:build": "npx -y concurrently \"npm run clean:sdk:build\" \"npm run clean:web:build\" \"npm run clean:contracts:build\"",
    "commitlint": "commitlint --edit",
    "prettier": "npx -y concurrently \"npm run prettier:sdk\" \"npm run prettier:web\" \"npm run prettier:contracts\"",
    "prettier:sdk": "cd packages/ats/sdk && npm run prettier",
    "prettier:web": "cd apps/ats/web && npm run prettier",
    "prettier:contracts": "cd packages/ats/contracts && npm run prettier",
    "pre-commit:contracts": "cd packages/ats/contracts && npm run pre-commit",
    "pre-commit:sdk": "cd packages/ats/sdk && npm run pre-commit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "husky": "^9.1.7",
    "yarn": "^1.22.22",
    "@nomiclabs/hardhat-ethers": "^2.2.2"
  }
}