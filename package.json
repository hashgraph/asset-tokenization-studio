{
  "name": "@hashgraph/hedera-asset-tokenization",
  "version": "1.14.4",
  "license": "Apache-2.0",
  "description": "asset tokenization",
  "private": true,
  "workspaces": [
    "packages/ats/*",
    "apps/ats/*"
  ],
  "scripts": {
    "setup": "npm install",
    "postinstall": "npm run build:all",
    "build:all": "npm run build --workspaces --if-present",
    "build:contracts": "npm run build --workspace=packages/ats/contracts",
    "build:sdk": "npm run build --workspace=packages/ats/sdk",
    "build:web": "npm run build --workspace=apps/ats/web",
    "test:all": "npm run test --workspaces --if-present",
    "test:contracts": "npm run test --workspace=packages/ats/contracts",
    "test:sdk": "npm run test --workspace=packages/ats/sdk",
    "test:web": "npm run test --workspace=apps/ats/web",
    "lint:all": "npm run lint --workspaces --if-present",
    "lint:fix:all": "npm run lint:fix --workspaces --if-present",
    "clean:all": "npm run clean --workspaces --if-present && rimraf node_modules package-lock.json",
    "clean:build": "npm run clean:build --workspaces --if-present",
    "dev": "npm run dev --workspace=apps/ats/web",
    "start": "npm run build:contracts && npm run build:sdk && npm run dev",
    "publish:all": "npm run publish --workspaces --if-present",
    "commitlint": "commitlint --edit",
    "prettier:all": "npm run prettier --workspaces --if-present",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "husky": "^9.1.7",
    "rimraf": "^5.0.0"
  }
}