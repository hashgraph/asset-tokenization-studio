{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowJs": false,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@Components/*": ["./src/Components/*"],
      "@Theme/*": ["./src/Theme/*"],
      "@Hooks/*": ["./src/Hooks/*"],
    }
  },
  "include": ["src"]
}
