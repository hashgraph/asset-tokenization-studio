  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "setup": "npm install",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --cache",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
