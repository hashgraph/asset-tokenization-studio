    "reflect-metadata": "0.2.2",
    "rxjs": "7.8"
  },
  "devDependencies": {
    "@nestjs/testing": "10.3.3",
    "@types/node": "20.11.24",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "@nestjs/config": ">=3.0.0",
    "joi": ">=17.0.0"
  },
